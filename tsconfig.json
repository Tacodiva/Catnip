{
    "compilerOptions": {
        "target": "ES2021",
        "module": "ES2022",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "stripInternal": true,
        "skipLibCheck": true,
    },
    "ts-node": {
        "experimentalSpecifierResolution": "node",
        "transpileOnly": true,
        "esm": true,
        "compilerOptions": {
            "module": "ESNext"
        },
    },
    "include": [
        "src"
    ],
}